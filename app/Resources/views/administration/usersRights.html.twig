{% extends 'base.html.twig' %}

{% block body_id 'usersRights' %}

{% block adminNavigation %}
    {% include 'administration/adminNav.html.twig' %}
{% endblock %}

{% block main %}

    <div class="container">

        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Full name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Added</th>
                    <th scope="col">Admin</th>
                </tr>
                </thead>

                <tbody>
                {% for user in users %}

                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.fullName }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% if 0 < user.uploadedProducts.count %}
                                <a
                                        href="{{ path('addedProducts', {'userId': user.id}) }}"
                                        class="underline"
                                        target="_blank"
                                >{{ user.uploadedProducts.count }}</a>
                            {% else %}
                                0
                            {% endif %}
                        </td>
                        <td>
                            <input {{ user.admin ? 'checked' : '' }} type="checkbox" id="ROLE_ADMIN" value="{{ user.id }}">
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>

    <script>
        $(document).ready(function () {
                $(':checkbox').click(function () {
                        let id = $(this).val();
                        let role = $(this).attr('id');
                        let path = "{{ path('editRoles', {'userId': 'id', 'roleName': 'role'}) }}";
                        path = path.replace('id', id);
                        path = path.replace('role', role);

                        window.location.replace(path);
                    }
                )
            }
        );
    </script>

{% endblock %}


